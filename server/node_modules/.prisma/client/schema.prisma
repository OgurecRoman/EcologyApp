generator client {
  provider   = "prisma-client-js"
  engineType = "wasm"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Event {
  id           Int       @id @default(autoincrement())
  name         String
  description  String
  type         EventType
  date         DateTime
  address      String
  author       String
  participants User[]
  isNotificate Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  imageUrl  String? // URL изображения (опционально)
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  likes     Like[] // Лайки поста
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           Int       @id
  username     String
  rating       Int       @default(0)
  lastActivity DateTime?
  events       Event[]

  // Посты пользователя
  posts Post[]

  // Подписки: на кого подписан пользователь
  following User[] @relation("UserFollows")

  // Подписчики: кто подписан на пользователя
  followers User[] @relation("UserFollows")

  // Лайки пользователя
  likes Like[]

  createdAt DateTime @default(now())
}

model Like {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId Int
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId]) // Один пользователь может лайкнуть пост только один раз
}

enum EventType {
  SUBBOTNIK
  PAPER_COLLECTION
  BATTERY_COLLECTION
  PLASTIC_COLLECTION
  GLASS_COLLECTION
  ELECTRONICS_COLLECTION
  OTHER
}
