{
  "version": 2,
  "builds": [
    {
      "src": "server.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["views/**"] 
      }
    }
  ],
  "scripts": {
    "postinstall": "npx prisma generate",
    "migrate-and-build": "npx prisma migrate deploy",
    "start": "node index.js"
  },
  "routes": [
    {
      "src": "/.*",
      "dest": "server.js"
    }
  ]
}