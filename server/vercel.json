{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/migrations/", "prisma/", "lib/", "api/"]
      }
    },
    {
      "src": "api/cron-job.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/migrations/", "prisma/", "lib/**"]
      }
    }
  ],
  "crons": [
    {
      "path": "/api/cron-job",
      "schedule": "40 14 * * "
    }
  ],
  "routes": [
    {
      "src": "/api/cron-job",
      "dest": "/api/cron-job.js"
    },
    {
      "src": "/.",
      "dest": "server.js"
    }
  ]
}
