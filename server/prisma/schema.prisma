// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventType {
  SUBBOTNIK
  PAPER_COLLECTION
  BATTERY_COLLECTION
  PLASTIC_COLLECTION
  MITTING
  PLANTING_TREES
  OTHER
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  type        EventType
  date        DateTime
  address     String
  author      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("Event")
}