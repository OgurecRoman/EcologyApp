generator client {
  provider = "prisma-client-js"
  engineType = "wasm"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  type        EventType
  date        DateTime
  address     String
  author      String   // Можно заменить на authorId: Int и связать с User
  participants User[]
  isNotificate  Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        Int      @id
  username  String 
  events    Event[]  // События, в которых участвует
  createdAt DateTime @default(now())
}

enum EventType {
  SUBBOTNIK
  PAPER_COLLECTION
  BATTERY_COLLECTION
  PLASTIC_COLLECTION
  GLASS_COLLECTION
  ELECTRONICS_COLLECTION
  OTHER
}